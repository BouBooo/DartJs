<h1 class="text-center my-5">Joueurs</h1>

<div class="mb-5 d-flex justify-content-around">
    <a href="/games" class="btn btn-primary btn-lg">Gérer les parties</a>
    <a href="/players/new" class="btn btn-primary btn-lg">
      <i class="fas fa-plus"></i>
      Créer un nouveau joueur
    </a>
</div>
<div class="container">
    <div class="users">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Nom</th>
        <th>Email</th>
        <th>Parties gagnées</th>
        <th>Parties perdues</th>
        <th>Date de création</th>
        <th>Actions</th>
      </tr>

      {{#each players}}
          <tr>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{gameWin}}</td>
          <td>{{gameLost}}</td>
          <td>{{createdAt}}</td>
          <td width="250" class="d-flex justify-content-between">
            <a href="/players/{{_id}}" class="btn btn-primary">
              <i class="fas fa-edit"></i>
              Editer
            </a>
            <form method="POST" action="/players/{{_id}}?_method=DELETE">
              <button class="btn btn-warning" type="submit">
                <i class="fas fa-times"></i>
                Supprimer
                </button>
            </form>
          </td>
      </tr>
      {{/each}}

      </table>
    </div>
</div>
