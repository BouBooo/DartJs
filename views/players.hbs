<h1 class="text-center my-5">Joueurs</h1>

<div class="mb-5 d-flex justify-content-around">
    <a href="/games" class="btn btn-primary btn-lg">Gérer les parties</a>
    <a href="/games/new" class="btn btn-primary btn-lg">Créer une nouvelle partie</a>
</div>
<div class="container">
    <div class="users">
    <table class="table table-striped table-bordered">
      <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Email</th>
        <th>Parties gagnées</th>
        <th>Parties perdues</th>
        <th>Date de création</th>
        <th>Actions</th>
      </tr>

      {{#each players}}
          <tr>
          <td>{{ _id }}</td>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{gameWin}}</td>
          <td>{{gameLost}}</td>
          <td>{{createdAt}}</td>
          <td class="d-flex justify-content-between">
            <a href="/players/{{_id}}/edit" class="btn btn-primary">
              Voir
            </a>
            <form method="POST" action="/players/{{_id}}?_method=DELETE">
              <button class="btn btn-warning" type="submit">Supprimer</button>
            </form>
          </td>
      </tr>
      {{/each}}

      </table>
    </div>
</div>
