<h1 class="text-center my-5">Partie : <b>{{ game.mode }}</b></h1>

<div class="mb-5 d-flex justify-content-around">
    <a href="/games" class="btn btn-primary btn-lg">GÃ©rer les parties</a>
</div>
<div class="main">
    <div class="d-flex justify-content-around">
        <div class="col-4 game_players">
             <h3>Joueurs dans la partie ({{ playersId }} / 4)</h3   >
            <table class="table table-striped table-bordered">
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            {{#each players}}
            <tr>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td class="d-flex justify-content-between">
                <form method="POST" action="/games/{{../game._id}}/players?_method=DELETE">
                    <input type="hidden" value="{{ _id }}" name="id">
                    <button class="btn btn-warning" type="submit">Supprimer</button>
                </form>
                </td>
            </tr>
            {{/each}}

            </table>
        </div>
        <div class="col-4 no_game_players">
             <h1>Joueurs sans game</h1>
            <table class="table table-striped table-bordered">
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            {{#each noPlayers }}
            <tr>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td class="d-flex justify-content-between">
                <form method="POST" action="/games/{{ ../game._id }}/players">
                    <input type="hidden" value="{{ _id }}" name="player_id">
                    <button type="submit" class="btn btn-primary">
                    Ajouter
                    </button>
                </form>
                </td>
            </tr>
            {{/each}}
            </table>
        </div>
    </div>
</div>
