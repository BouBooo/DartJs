<div class="container">
    <div class="my-5 d-flex justify-content-around">
        <a href="/games/{{ game._id }}/players" class="btn btn-primary btn-lg">Voir les joueurs de la partie</a>
    </div>
    <div class="main">
    <div class="d-flex">
        <div class="dart-actions">
            <div class="darts d-flex justify-content-around my-5">
                <form action="/games/{{ game._id }}/shots" method="POST">
                    <input type="hidden" value="{{ randomShot.sector }}" name="sector">
                    <input type="hidden" value="{{ randomShot.multiplicator }}" name="multiplicator">
                    <input type="hidden" value="{{ randomShot.playerId }}" name="playerId">
                    <input type="hidden" value="{{ randomShot.gameId }}" name="gameId">
                    <button class="btn" type="submit">
                        <img class="w-25" src="/images/darts.jpg"/>
                    </button>
                </form>
            </div>
            <div class="my-5 d-flex justify-content-around">
                <form action="/games/{{ game._id }}/shots" method="POST">
                    <input type="hidden" value="0" name="sector">
                    <input type="hidden" value="0" name="multiplicator">
                    <input type="hidden" value="{{ currentPlayer._id }}" name="playerId">
                    <input type="hidden" value="{{ game._id }}" name="gameId">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-poop"></i>
                        Cible manqu√©e
                    </button>
                </form>
                <form action="/games/{{ game._id }}?_method=PATCH" method="POST">
                    <input type="hidden" value="{{ game.name }}" name="name">
                    <input type="hidden" value="{{ game.mode }}" name="mode">
                    <input type="hidden" value="started" name="status">
                    <button class="btn btn-success" type="submit">
                        Lancer la partie
                    </button>
                </form>
            </div>
        </div>
    </div>
        <div class="d-flex justify-content-around">
            <div class="game_players">
                <h3>Joueurs dans la partie ({{ playersId }} / 4)</h3   >
                <table class="table table-striped table-bordered">
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                </tr>
                {{#each players}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                </tr>
                {{/each}}

                </table>
            </div>
            <div class="current_player">
                <h3>Joueur actuel</h3>
                <table class="table table-striped table-bordered">
                <tr>
                    <th>Nom</th>
                    <th>Nombre de coups restants</th>

                </tr>
                <tr>
                    <td>{{ currentPlayer.name }}</td>
                    <td>2 ( TODO )</td>
                </tr>

                </table>
                <div class="scores">
                    <h3>Scores</h3>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Joueur</th>
                                <th scope="col">Secteur</th>
                                <th scope="col">Multiplicateur</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each gameShots}}
                            <tr>
                                
                                <th>{{ playerId }} </th>
                                <td>{{ sector }}</td>
                                <td>{{ multiplicator }}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
