<h1 class="text-center my-5">Parties</h1>

<div class="mb-5 d-flex justify-content-around">
    <a href="/players" class="btn btn-primary btn-lg">Gérer les joueurs</a>
    <a href="/games/new" class="btn btn-primary btn-lg">
      <i class="fas fa-plus"></i>
      Créer une nouvelle partie
    </a>
</div>
<div class="container">
    <div class="users">
    <table class="table table-striped table-bordered">
      <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Mode de jeu</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>

      {{#each games}}
      <tr>
          <td>{{ _id }}</td>
          <td>{{name}}</td>
          <td>{{mode}}</td>
          <td>{{status}}</td>
          <td class="d-flex justify-content-around">
            <a href="/games/{{_id}}" class="btn btn-primary">
              <i class="fas fa-eye"></i>
              Accéder
            </a>
            <form method="POST" action="/games/{{_id}}?_method=DELETE">
              <button class="btn btn-warning" type="submit">
                <i class="fas fa-times"></i>
                Supprimer
              </button>
            </form>
          </td>
      </tr>
      {{/each}}

      </table>
    </div>
</div>
